{
  "manifest_version": 3,
  "name": "Ollama Page Summarizer2",
  "version": "1.1",
  "description": "Summarizes and reads aloud the content of the current page.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:1234/",
    "<all_urls>",
    "https://api.aivis-project.com/",
    "https://hooks.slack.com/" ,
    "https://api.openai.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ページを要約"
  },
  "side_panel": {
    "default_path": "detached.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Readability.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}